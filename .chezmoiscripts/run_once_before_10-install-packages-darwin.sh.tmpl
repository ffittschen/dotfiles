{{- if (eq .chezmoi.os "darwin") -}}
#!/usr/bin/env bash

set -eufo pipefail

{{ $taps := list
    "homebrew/cask-drivers"
    "homebrew/cask-fonts"
    "homebrew/cask-versions"
    "robotsandpencils/made" -}}
{{ $brews := list
    "aria2"
    "cloc"
    "curl"
    "dockutil"
    "exa"
    "fish"
    "fisher"
    "gh"
    "git"
    "git-lfs"
    "graphviz"
    "htop"
    "httpie"
    "jq"
    "mas"
    "mint"
    "mise"
    "ncdu"
    "ripgrep"
    "robotsandpencils/made/xcodes"
    "speedtest-cli"
    "swiftformat"
    "swiftlint"
    "tree"
    "wget"
    "xcbeautify"
    "xclogparser"
    "xz" -}}
{{ $casks := list
    "1password"
    "1password-cli"
    "appcleaner"
    "arq"
    "daisydisk"
    "deckset"
    "elgato-stream-deck"
    "font-meslo-for-powerline"
    "gpg-suite-no-mail"
    "handbrake"
    "iterm2"
    "raycast"
    "setapp"
    "sf-symbols"
    "slack"
    "soundsource"
    "spotify"
    "suspicious-package"
    "tower"
    "transmit"
    "visual-studio-code"
    "vlc" -}}
{{ $apps := dict
    "1Password for Safari" "1569813296"
    "Amphetamine" "937984704"
    "DevCleaner" "1388020431"
    "Developer" "640199958"
    "Disk Speed Test" "425264550"
    "Keynote" "409183694"
    "Playgrounds" "1496833156"
    "Save to Raindrop.io" "1549370672"
    "Speedtest" "1153157709"
    "Things" "904280696" -}}

{{ if .personal -}}
{{ $brews = concat $brews (list
    "yt-dlp") -}}
{{ $casks = concat $casks (list
    "brave-browser"
    "soulver"
    "teamviewer"
    "tresorit") -}}
{{ $apps = merge $apps (dict
    "Numbers" "409203825"
    "Pages" "409201541") -}}
{{ end -}}

{{ if .work -}}
{{ $brews = concat $brews (list
    "actionlint"
    "ansible"
    "aws-iam-authenticator"
    "awscli"
    "needle"
    "phrase-cli"
    "protolint") -}}
{{ $casks = concat $casks (list
    "figma"
    "microsoft-teams"
    "onedrive"
    "remote-desktop-manager-free"
    "zoom") -}}
{{ $apps = merge $apps (dict
    "CatoClient" "1128104033"
    "Keeper Password Manager" "414781829") -}}
{{ end -}}

brew bundle --no-lock --file=/dev/stdin <<EOF
{{ range ($taps | sortAlpha | uniq) -}}
tap "{{ . }}"
{{ end -}}
{{ range ($brews | sortAlpha | uniq) -}}
brew "{{ . }}"
{{ end -}}
{{ range ($casks | sortAlpha | uniq) -}}
cask "{{ . }}"
{{ end -}}
{{ range (keys $apps | sortAlpha | uniq) -}}
mas "{{ . }}", id: {{ get $apps . }}
{{ end -}}
EOF
{{ end -}}