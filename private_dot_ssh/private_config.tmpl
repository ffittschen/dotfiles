{{ if .work -}}
Host github.com
	Hostname ssh.github.com
	Port 443
	User git
{{ end }}
Host *
{{- if eq .chezmoi.os "darwin" }}
	AddKeysToAgent yes
	UseKeychain yes
{{- end }}
	IdentityFile ~/.ssh/id_ed25519
	IdentityFile ~/.ssh/id_rsa
	ControlMaster auto
{{- if eq .chezmoi.os "darwin" }}
	ControlPath /tmp/ssh-%r@%h:%p.socket
{{- end }}
